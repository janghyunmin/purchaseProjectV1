<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <import type="android.view.View"/>
        <variable name="adapter" type="run.piece.dev.refactoring.ui.join.CarrierRvAdapter" />
        <variable name="carrier" type="String" />
        <variable name="isChecked" type="Boolean" />
        <variable name="position" type="Integer" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginTop="8dp"
        android:onClick="@{() -> adapter.setItemSelected(position)}">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/item_tv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="24dp"
            android:gravity="center_vertical"
            android:text="@{carrier}"
            android:textColor="@{isChecked ? @color/g900_292A2E : @color/g500_B8BCC8}"
            app:layout_constraintStart_toStartOf="parent"
            style="@style/title_2"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/check_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_carrier_check_select"
            android:visibility="@{isChecked ? View.VISIBLE : View.GONE}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/item_tv"
            app:layout_constraintBottom_toBottomOf="@+id/item_tv" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>