<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="withdraw"
            type="run.piece.dev.refactoring.ui.deletemember.DeleteMemberActivity" />


    </data>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nested_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            >

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/top_layout"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/back_iv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="6dp"
                        android:padding="10dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/ic_x24_arrow_left_black" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/title_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    app:layout_constraintTop_toBottomOf="@+id/top_layout">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/pretendard_extrabold"
                        android:lineHeight="32dp"
                        android:text="@string/member_delete"
                        android:textColor="@color/c_4a4d55"
                        android:textSize="26dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/sub_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:fontFamily="@font/pretendard_regular"
                        android:lineHeight="20dp"
                        android:text="@string/delete_text_1"
                        android:textColor="@color/c_8c919f"
                        android:textSize="14dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/title" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <!-- 사용하지 않는 앱 layout start -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/reason_layout1"
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginTop="20dp"
                    app:layout_constraintTop_toBottomOf="@+id/title_layout">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/reason_title1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/pretendard_regular"
                        android:text="@string/delete_text_2"
                        android:textColor="@color/g600_8C919F"
                        android:lineHeight="25dp"
                        android:textSize="16dp"
                        app:layout_constraintHorizontal_bias="0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/check_icon1"
                        app:layout_constraintTop_toTopOf="@+id/check_icon1"
                        app:layout_constraintBottom_toBottomOf="@+id/check_icon1"/>

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/check_icon1"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:background="@drawable/ic_x24_check_10cfc9"
                        android:visibility="gone"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <View
                    android:id="@+id/line_1"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:background="@color/c_f2f3f4"
                    app:layout_constraintTop_toBottomOf="@+id/reason_layout1" />
                <!-- 사용하지 않는 앱 layout end -->


                <!-- 수익률 회수 기간이 너무 길어요 layout start -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/reason_layout2"
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    app:layout_constraintTop_toBottomOf="@+id/line_1">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/reason_title2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/pretendard_regular"
                        android:lineHeight="25dp"
                        android:text="@string/delete_text_3"
                        android:textColor="@color/g600_8C919F"
                        android:textSize="16dp"
                        app:layout_constraintHorizontal_bias="0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/check_icon2"
                        app:layout_constraintTop_toTopOf="@+id/check_icon2"
                        app:layout_constraintBottom_toBottomOf="@+id/check_icon2"/>

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/check_icon2"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:visibility="gone"
                        android:background="@drawable/ic_x24_check_10cfc9"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <View
                    android:id="@+id/line_2"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:background="@color/c_f2f3f4"
                    app:layout_constraintTop_toBottomOf="@+id/reason_layout2" />
                <!-- 수익률 회수 기간이 너무 길어요 layout end -->


                <!-- 앱에 오류가 많아요 layout start -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/reason_layout3"
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:paddingTop="20dp"
                    android:paddingBottom="20dp"
                    app:layout_constraintTop_toBottomOf="@+id/line_2">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/reason_title3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/pretendard_regular"
                        android:lineHeight="25dp"
                        android:text="@string/delete_text_4"
                        android:textColor="@color/g600_8C919F"
                        android:textSize="16dp"
                        app:layout_constraintHorizontal_bias="0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/check_icon3"
                        app:layout_constraintTop_toTopOf="@+id/check_icon3"
                        app:layout_constraintBottom_toBottomOf="@+id/check_icon3"/>

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/check_icon3"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:visibility="gone"
                        android:background="@drawable/ic_x24_check_10cfc9"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <View
                    android:id="@+id/line_3"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:background="@color/c_f2f3f4"
                    app:layout_constraintTop_toBottomOf="@+id/reason_layout3" />
                <!-- 앱에 오류가 많아요 layout end -->


                <!-- 앱을 어떻게 쓰는지 모르겠어요 layout start -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/reason_layout4"
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    app:layout_constraintTop_toBottomOf="@+id/line_3">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/reason_title4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/pretendard_regular"
                        android:lineHeight="25dp"
                        android:textSize="16dp"
                        android:text="@string/delete_text_5"
                        android:textColor="@color/g600_8C919F"
                        app:layout_constraintHorizontal_bias="0"
                        app:layout_constraintTop_toTopOf="@+id/check_icon4"
                        app:layout_constraintBottom_toBottomOf="@+id/check_icon4"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/check_icon4" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/check_icon4"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:visibility="gone"
                        android:background="@drawable/ic_x24_check_10cfc9"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <View
                    android:id="@+id/line_4"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:background="@color/c_f2f3f4"
                    app:layout_constraintTop_toBottomOf="@+id/reason_layout4" />
                <!-- 앱을 어떻게 쓰는지 모르겠어요 layout end -->


                <!-- 비슷한 서비스가 더 좋아요 layout start -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/reason_layout5"
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    app:layout_constraintTop_toBottomOf="@+id/line_4">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/reason_title5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/pretendard_regular"
                        android:lineHeight="25dp"
                        android:textSize="16dp"
                        android:text="@string/delete_text_6"
                        android:textColor="@color/g600_8C919F"
                        app:layout_constraintHorizontal_bias="0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/check_icon5"
                        app:layout_constraintTop_toTopOf="@+id/check_icon5"
                        app:layout_constraintBottom_toBottomOf="@+id/check_icon5"/>

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/check_icon5"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:visibility="gone"
                        android:background="@drawable/ic_x24_check_10cfc9"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <View
                    android:id="@+id/line_5"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:background="@color/c_f2f3f4"
                    app:layout_constraintTop_toBottomOf="@+id/reason_layout5" />
                <!-- 비슷한 서비스가 더 좋아요 layout end -->


                <!-- 기타 layout start -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/reason_layout6"
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    app:layout_constraintTop_toBottomOf="@+id/line_5">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/reason_title6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/pretendard_regular"
                        android:lineHeight="25dp"
                        android:textSize="16dp"
                        android:text="@string/delete_text_7"
                        android:textColor="@color/g600_8C919F"
                        app:layout_constraintHorizontal_bias="0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/check_icon6"
                        app:layout_constraintTop_toTopOf="@+id/check_icon6"
                        app:layout_constraintBottom_toBottomOf="@+id/check_icon6"/>

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/check_icon6"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:visibility="gone"
                        android:background="@drawable/ic_x24_check_10cfc9"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>
                <!-- 기타 layout end -->

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/edit_text_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/reason_layout6"
                    android:layout_marginTop="20dp"
                    android:paddingBottom="80dp">

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/edit_text"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:layout_marginBottom="30dp"
                        android:background="@drawable/layout_border_eaecf0"
                        android:fontFamily="@font/pretendard_regular"
                        android:gravity="left"
                        android:hint="탈퇴하려는 이유를 직접 작성해 주세요."
                        android:lineHeight="20dp"
                        android:textSize="14dp"
                        android:padding="10dp"
                        android:textColorHint="@color/g600_8C919F"
                        android:textColor="@color/black"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:visibility="gone"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/confirm_btn"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginEnd="12dp"
                    android:background="@drawable/withdraw_selector"
                    android:gravity="center"
                    android:lineHeight="25dp"
                    android:text="@string/confirm_text"
                    android:textColor="@drawable/j_selector_text_color"
                    android:textSize="14dp"
                    app:fontFamily="@font/pretendard_bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    />


            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>
</layout>