<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="item"
            type="run.piece.domain.refactoring.portfolio.model.PortfolioStockItemVo" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/c_f2f3f4">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/section_title_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/securities_section_title_txt"
            android:textColor="@color/black"
            android:layout_marginTop="32dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            style="@style/title_1"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/section_title_tv">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="24dp">

                <androidx.constraintlayout.widget.Group
                    android:id="@+id/dividend_hide_group"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:constraint_referenced_ids="securities_title_tv, securities_iv"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/securities_title_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    style="@style/title_1"/>

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/securities_iv"
                    android:layout_width="110dp"
                    android:layout_height="120dp"
                    android:layout_marginTop="44dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/securities_title_tv"
                    app:srcCompat="@drawable/ic_securities" />

                <TableLayout
                    android:id="@+id/tab_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="24dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/securities_iv">

                    <TableRow
                        android:id="@+id/stock_row"
                        android:layout_marginBottom="8dp"
                        android:paddingTop="4dp"
                        android:paddingBottom="4dp"
                        android:layout_weight="1">
                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="증권종류"
                            android:textColor="@color/g700_757983"
                            android:layout_marginEnd="16dp"
                            style="@style/body_1"/>

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/stock_row_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="투자계약증권"
                            android:textColor="@color/g900_292A2E"
                            android:gravity="end"
                            style="@style/body_1"/>
                    </TableRow>

                    <TableRow
                        android:layout_marginBottom="8dp"
                        android:paddingTop="4dp"
                        android:paddingBottom="4dp"
                        android:layout_weight="1">
                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/securities_item_one_tv"
                            android:textColor="@color/g700_757983"
                            android:layout_marginEnd="16dp"
                            style="@style/body_1"/>

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/securities_item_one_sub_tv"
                            android:textColor="@color/g900_292A2E"
                            android:gravity="end"
                            style="@style/body_1"/>
                    </TableRow>

                    <TableRow
                        android:layout_marginBottom="8dp"
                        android:paddingTop="4dp"
                        android:paddingBottom="4dp"
                        android:layout_weight="1">
                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/securities_item_two_tv"
                            android:textColor="@color/g700_757983"
                            android:layout_marginEnd="16dp"
                            style="@style/body_1"/>

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/recruitment_amount_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text=""
                            android:textColor="@color/g900_292A2E"
                            android:gravity="end"
                            style="@style/body_1"/>
                    </TableRow>

                    <TableRow
                        android:layout_marginBottom="8dp"
                        android:paddingTop="4dp"
                        android:paddingBottom="4dp"
                        android:layout_weight="1">
                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/securities_item_three_tv"
                            android:textColor="@color/g700_757983"
                            android:layout_marginEnd="16dp"
                            style="@style/body_1"/>

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/total_amount_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textColor="@color/g900_292A2E"
                            android:gravity="end"
                            style="@style/body_1"/>
                    </TableRow>

                    <TableRow
                        android:layout_marginBottom="8dp"
                        android:paddingTop="4dp"
                        android:paddingBottom="4dp"
                        android:layout_weight="1">
                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/securities_item_four_tv"
                            android:textColor="@color/g700_757983"
                            android:layout_marginEnd="16dp"
                            style="@style/body_1"/>

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/one_price_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/g900_292A2E"
                            android:layout_weight="1"
                            android:gravity="end"
                            style="@style/body_1"/>
                    </TableRow>

                    <TableRow
                        android:layout_marginBottom="8dp"
                        android:paddingTop="4dp"
                        android:paddingBottom="4dp"
                        android:layout_weight="1">
                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/securities_item_five_tv"
                            android:textColor="@color/g700_757983"
                            android:layout_marginEnd="16dp"
                            style="@style/body_1"/>

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/date_time_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:layout_weight="1"
                            android:textColor="@color/g900_292A2E"
                            android:gravity="end"
                            style="@style/body_1"/>
                    </TableRow>

                    <TableRow
                        android:paddingTop="4dp"
                        android:paddingBottom="4dp"
                        android:layout_marginBottom="8dp"
                        android:layout_weight="1">
                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/securities_item_six_tv"
                            android:textColor="@color/g700_757983"
                            android:layout_marginEnd="16dp"
                            style="@style/body_1"/>

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/method_row_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/securities_item_six_sub_old_tv"
                            android:layout_weight="1"
                            android:textColor="@color/g900_292A2E"
                            android:gravity="end"
                            style="@style/body_1"/>
                    </TableRow>

                    <TableRow
                        android:paddingTop="4dp"
                        android:paddingBottom="4dp"
                        android:layout_weight="1">
                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/securities_item_seven_tv"
                            android:textColor="@color/g700_757983"
                            android:layout_marginEnd="16dp"
                            style="@style/body_1"/>

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/securities_item_seven_sub_tv"
                            android:layout_weight="1"
                            android:textColor="@color/g900_292A2E"
                            android:gravity="end"
                            style="@style/body_1"/>
                    </TableRow>

                </TableLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/securities_bottom_prod_txt"
            android:textColor="@color/g700_757983"
            android:layout_marginBottom="32dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/card_view"
            app:layout_constraintBottom_toBottomOf="parent"
            style="@style/body_2"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>

