<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".refactoring.ui.info.NewMyInfoActivity">
    <data>
        <variable
            name="activity"
            type="run.piece.dev.refactoring.ui.info.NewMyInfoActivity" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/top_layout"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/back_layout"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="4dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:background="@drawable/ic_x24_arrow_left_black"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/top_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/myinfo_title"
                android:textColor="@color/g800_4A4D55"
                android:textSize="16dp"
                android:lineHeight="25dp"
                app:fontFamily="@font/pretendard_regular"
                app:layout_constraintTop_toTopOf="@+id/back_layout"
                app:layout_constraintBottom_toBottomOf="@+id/back_layout"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/auth_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/myinfo_title_1"
            android:textColor="@color/g800_4A4D55"
            android:fontFamily="@font/pretendard_bold"
            android:layout_marginStart="16dp"
            android:layout_marginTop="20dp"
            android:textSize="16dp"
            android:lineHeight="25dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/top_layout"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/re_auth_content_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/re_auth"
            android:fontFamily="@font/pretendard_regular"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="20dp"
            android:textColor="@color/p500_10CFC9"
            android:textSize="16dp"
            android:lineHeight="25dp"
            android:onClick="@{() -> activity.reAuth()}"
            app:layout_constraintTop_toBottomOf="@+id/top_layout"
            app:layout_constraintEnd_toEndOf="parent"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/name_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="@string/myinfo_title_2"
            android:fontFamily="@font/pretendard_regular"
            android:textColor="@color/g600_8C919F"
            android:layout_marginStart="16dp"
            android:textSize="16dp"
            android:lineHeight="25dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/auth_title_tv" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/name_content_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/pretendard_bold"
            android:textColor="@color/g800_4A4D55"
            android:layout_marginEnd="16dp"
            android:textSize="16dp"
            android:lineHeight="25dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/re_auth_content_tv"
            />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/birth_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="@string/myinfo_title_3"
            android:fontFamily="@font/pretendard_regular"
            android:textColor="@color/g600_8C919F"
            android:layout_marginStart="16dp"
            android:textSize="16dp"
            android:lineHeight="25dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/name_title_tv"
            />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/birth_content_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/pretendard_bold"
            android:textColor="@color/g800_4A4D55"
            android:layout_marginEnd="16dp"
            android:textSize="16dp"
            android:lineHeight="25dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/name_content_tv" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/phone_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:text="@string/myinfo_title_4"
            android:fontFamily="@font/pretendard_regular"
            android:textColor="@color/g600_8C919F"
            android:layout_marginStart="16dp"
            android:textSize="16dp"
            android:lineHeight="25dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/birth_title_tv"
            />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/phone_content_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/pretendard_bold"
            android:textColor="@color/g800_4A4D55"
            android:layout_marginEnd="16dp"
            android:textSize="16dp"
            android:lineHeight="25dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/birth_content_tv"/>

        <View
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="24dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:background="@color/g200_F2F3F4"
            app:layout_constraintTop_toBottomOf="@+id/phone_title_tv"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/address_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/myinfo_title_5"
            android:fontFamily="@font/pretendard_bold"
            android:textColor="@color/g800_4A4D55"
            android:layout_marginStart="16dp"
            android:layout_marginTop="20dp"
            android:textSize="16dp"
            android:lineHeight="25dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/line"
            />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/address_content_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/address_register"
            android:fontFamily="@font/pretendard_regular"
            android:textColor="@color/p500_10CFC9"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="20dp"
            android:textSize="16dp"
            android:lineHeight="25dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/line"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/hide_address_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/address_content_tv"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/no_address_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/pretendard_regular"
                android:textColor="@color/g500_B8BCC8"
                android:text="@string/myinfo_text"
                android:gravity="center"
                android:textSize="16dp"
                android:lineHeight="25dp"
                android:layout_marginTop="20dp"
                android:visibility="gone"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <androidx.constraintlayout.widget.Group
                android:id="@+id/address_group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:constraint_referenced_ids="base_address_tv, detail_address_tv"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/base_address_tv"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:fontFamily="@font/pretendard_semibold"
                android:textColor="@color/g800_4A4D55"
                android:textSize="16dp"
                android:lineHeight="25dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/detail_address_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:fontFamily="@font/pretendard_regular"
                android:textColor="@color/g800_4A4D55"
                android:textSize="16dp"
                android:lineHeight="25dp"
                android:layout_marginEnd="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/base_address_tv"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:id="@+id/line_2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:background="@color/g200_F2F3F4"
            app:layout_constraintTop_toBottomOf="@+id/hide_address_layout" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/email_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/myinfo_title_6"
            android:fontFamily="@font/pretendard_bold"
            android:textColor="@color/g800_4A4D55"
            android:layout_marginStart="16dp"
            android:layout_marginTop="20dp"
            android:textSize="16dp"
            android:lineHeight="25dp"
            app:layout_constraintTop_toBottomOf="@+id/line_2"
            app:layout_constraintStart_toStartOf="parent"
            />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/email_content_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/email_register"
            android:fontFamily="@font/pretendard_regular"
            android:textColor="@color/p500_10CFC9"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="20dp"
            android:textSize="16dp"
            android:lineHeight="25dp"
            app:layout_constraintTop_toBottomOf="@+id/line_2"
            app:layout_constraintEnd_toEndOf="parent"
            android:onClick="@{() -> activity.showEmailBottomSheet()}"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/hide_email_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/email_content_tv"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/no_email_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/pretendard_regular"
                android:textColor="@color/g500_B8BCC8"
                android:text="@string/myinfo_title_7"
                android:gravity="center"
                android:textSize="16dp"
                android:lineHeight="25dp"
                android:layout_marginTop="20dp"
                android:visibility="gone"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/email_tv"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:fontFamily="@font/pretendard_bold"
                android:textColor="@color/g800_4A4D55"
                android:textSize="16dp"
                android:lineHeight="25dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="20dp"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:id="@+id/line_3"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:background="@color/g200_F2F3F4"
            app:layout_constraintTop_toBottomOf="@+id/hide_email_layout" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/logout_btn"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:gravity="center"
            android:textColor="@color/g800_4A4D55"
            android:text="로그아웃"
            android:textSize="16dp"
            android:lineHeight="25dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/layout_round_border_eaecf0"
            app:fontFamily="@font/pretendard_bold"
            app:layout_constraintTop_toBottomOf="@+id/line_3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:onClick="@{() -> activity.logout()}"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>