<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="withdrawDetail"
            type="run.piece.dev.refactoring.ui.deletemember.DeleteMemberDetailActivity" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/top_layout"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/back_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:padding="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_x24_arrow_left_black" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/title_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toBottomOf="@+id/top_layout">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/pretendard_extrabold"
                android:lineHeight="32dp"
                android:text="@string/member_delete"
                android:textColor="@color/c_4a4d55"
                android:textSize="26dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/sub_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/pretendard_regular"
                android:lineHeight="20dp"
                android:text="@string/delete_member_title2"
                android:textColor="@color/c_8c919f"
                android:textSize="14dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/title" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- 안내 고지사항 layout start -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/notice_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="14dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="18dp"
            android:background="@drawable/layout_round_f2f3f4"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            app:layout_constraintTop_toBottomOf="@+id/title_layout">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/text_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/pretendard_regular"
                android:lineHeight="16dp"
                android:text="@string/delete_member_title3"
                android:textColor="@color/g600_8C919F"
                android:textSize="12dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/text_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/pretendard_regular"
                android:lineHeight="16dp"
                android:text="@string/delete_member_title4"
                android:textColor="@color/g600_8C919F"
                android:textSize="12dp"
                app:layout_constraintTop_toBottomOf="@+id/text_1" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/text_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/pretendard_regular"
                android:lineHeight="16dp"
                android:text="@string/delete_member_title5"
                android:textColor="@color/g600_8C919F"
                android:textSize="12dp"
                app:layout_constraintTop_toBottomOf="@+id/text_2" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/text_4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/pretendard_regular"
                android:lineHeight="16dp"
                android:text="@string/delete_member_title6"
                android:textColor="@color/g600_8C919F"
                android:textSize="12dp"
                app:layout_constraintTop_toBottomOf="@+id/text_3" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/text_5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/pretendard_regular"
                android:lineHeight="16dp"
                android:text="@string/delete_member_title7"
                android:textColor="@color/g600_8C919F"
                android:textSize="12dp"
                app:layout_constraintTop_toBottomOf="@+id/text_4" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/text_6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/pretendard_bold"
                android:lineHeight="16dp"
                android:text="@string/delete_member_title8"
                android:textColor="@color/c_FF7878"
                android:textSize="12dp"
                app:layout_constraintTop_toBottomOf="@+id/text_5" />

        </androidx.constraintlayout.widget.ConstraintLayout>
        <!-- 안내 고지사항 layout end -->

        <View
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_marginTop="40dp"
            android:background="@color/c_f2f3f4"
            app:layout_constraintTop_toBottomOf="@+id/notice_layout" />


        <!-- 출금 신청 layout start -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/withdraw_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            app:layout_constraintTop_toBottomOf="@+id/line">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/withdraw_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/delete_member_title9"
                style="@style/text_400_16_25_center"
                android:textColor="@color/g800_4A4D55"
                android:layout_marginStart="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/arrow_right_icon"
                app:layout_constraintBottom_toBottomOf="@+id/arrow_right_icon"/>

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/arrow_right_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/arrow_right"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
        <!-- 출금 신청 layout end -->

        <View
            android:id="@+id/line_2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:background="@color/c_f2f3f4"
            app:layout_constraintTop_toBottomOf="@+id/withdraw_layout" />
        <!-- 출금 신청 layout start -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/own_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/line_2">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/own_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/delete_member_title10"
                android:textSize="16dp"
                style="@style/text_400_16_25_center"
                android:textColor="@color/g800_4A4D55"
                android:layout_marginStart="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/arrow_right_icon_2"
                app:layout_constraintBottom_toBottomOf="@+id/arrow_right_icon_2"/>

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/arrow_right_icon_2"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/arrow_right"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
        <!-- 출금 신청 layout end -->

        <!-- 안내사항 layout start -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/content_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="14dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="14dp"
            app:layout_constraintTop_toBottomOf="@+id/own_layout">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/delete_notice_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/pretendard_regular"
                android:lineHeight="16dp"
                android:text="@string/delete_member_notice_text"
                android:textColor="@color/c_FF7878"
                android:textSize="12dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
        <!-- 안내사항 layout end -->

        <!-- 체크박스 layout start -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/checkbox_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="14dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="14dp"
            android:layout_marginBottom="20dp"
            app:layout_constraintBottom_toTopOf="@+id/btn_layout">

            <CheckBox
                android:id="@+id/check_box"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/chk_selector_10cfc9"
                android:button="@android:color/transparent"
                android:checked="false"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:fontFamily="@font/pretendard_regular"
                android:lineHeight="16dp"
                android:text="@string/delete_member_title11"
                android:textColor="@color/g600_8C919F"
                android:textSize="12dp"
                app:layout_constraintBottom_toBottomOf="@+id/check_box"
                app:layout_constraintStart_toEndOf="@+id/check_box"
                app:layout_constraintTop_toTopOf="@+id/check_box" />

        </androidx.constraintlayout.widget.ConstraintLayout>
        <!-- 체크박스 layout end -->

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/btn_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintBottom_toBottomOf="parent">

            <androidx.cardview.widget.CardView
                android:id="@+id/cancel_cv"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_marginEnd="10dp"
                app:cardElevation="0dp"
                app:cardCornerRadius="10dp"
                app:cardBackgroundColor="@color/g300_EAECF0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/delete_cv"
                app:layout_constraintBottom_toBottomOf="parent">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/g700_757983"
                    android:text="@string/cancle"
                    android:textSize="16dp"
                    android:lineHeight="25dp"
                    android:layout_gravity="center"
                    app:fontFamily="@font/pretendard_bold"/>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/delete_cv"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:clickable="false"
                app:cardElevation="0dp"
                app:cardCornerRadius="10dp"
                app:cardBackgroundColor="@color/g400_DADCE3"
                app:layout_constraintStart_toEndOf="@+id/cancel_cv"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:lineHeight="25dp"
                    android:layout_gravity="center"
                    android:text="@string/delete_text"
                    android:textColor="@color/white"
                    app:fontFamily="@font/pretendard_bold"/>

            </androidx.cardview.widget.CardView>

            <!--<androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/confirm_btn"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/layout_round_10cfc9"
                android:gravity="center"
                android:text="@string/delete_member_title12"
                android:textColor="@color/white"
                android:textSize="16dp"
                app:fontFamily="@font/pretendard_bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/cancle_btn"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/cancle_btn"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_marginStart="16dp"
                android:background="@drawable/layout_round_e6f9fa"
                android:gravity="center"
                android:text="@string/delete_member_title13"
                android:textColor="@color/c_757983"
                android:textSize="16dp"
                app:fontFamily="@font/pretendard_bold"
                app:layout_constraintEnd_toStartOf="@+id/confirm_btn"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />-->

        </androidx.constraintlayout.widget.ConstraintLayout>

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/loading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:lottie_autoPlay="true"
            app:lottie_fileName="piece_loading.json"
            app:lottie_loop="true"
            android:visibility="gone"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>