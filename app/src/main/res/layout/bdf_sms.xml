<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.view.View" />

        <variable name="dialog" type="run.piece.dev.refactoring.ui.join.dialog.JoinBDF" />
        <variable name="confirmSelected" type="Boolean" />
        <variable name="errorText" type="String" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/j_dialog_back_round"
        android:paddingBottom="16dp"
        app:behavior_hideable="true"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_rect"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/sms_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="36dp"
            android:gravity="center"
            android:text="@string/sms_title"
            android:textColor="@color/g800_4A4D55"
            android:textSize="20dp"
            android:textStyle="bold"
            app:fontFamily="@font/pretendard_extrabold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/sms_time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:textColor="@color/c_FF7878"
            android:text="02:59"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/sms_title_tv"
            style="@style/body_2"/>

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/sms_number_ev"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:layout_marginTop="24dp"
            android:focusable="true"
            android:gravity="left|center"
            android:hint="@string/sms_hint"
            android:inputType="number"
            android:maxLength="6"
            android:maxLines="1"
            android:textColor="@color/c_4a4d55"
            android:backgroundTint="@color/c_EAECF0"
            android:textSize="16dp"
            android:lineHeight="20dp"
            android:onTextChanged="@{dialog::onTextChanged}"
            android:theme="@style/Piece_EditText"
            app:fontFamily="@font/pretendard_regular"
            app:layout_constraintTop_toBottomOf="@+id/sms_time_tv" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/sms_retry_tv"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:text="@string/sms_retry"
            android:textColor="@color/c_07cad1"
            android:textSize="16dp"
            android:lineHeight="25px"
            android:gravity="center"
            app:fontFamily="@font/pretendard_bold"
            app:layout_constraintTop_toTopOf="@+id/sms_number_ev"
            app:layout_constraintBottom_toBottomOf="@+id/sms_number_ev"
            app:layout_constraintEnd_toEndOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/sms_error_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:lineHeight="20dp"
            android:text="@{errorText}"
            android:textSize="12dp"
            android:textColor="@color/c_FF7878"
            android:layout_marginStart="16dp"
            android:visibility="@{confirmSelected || errorText.isEmpty() ? View.VISIBLE : View.GONE}"
            app:fontFamily="@font/pretendard_regular"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/sms_number_ev" />

        <androidx.cardview.widget.CardView
            android:id="@+id/confirm_cv"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="24dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            app:cardBackgroundColor="@{confirmSelected ? @color/p500_10CFC9 : @color/g400_DADCE3}"
            app:cardElevation="0dp"
            app:cardCornerRadius="10dp"
            app:layout_constraintTop_toBottomOf="@+id/sms_number_ev"
            app:layout_constraintBottom_toBottomOf="parent">

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:lineHeight="25dp"
                android:layout_gravity="center"
                app:fontFamily="@font/pretendard_bold"
                android:text="@string/confirm_text"
                android:textColor="@color/white"/>

        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>