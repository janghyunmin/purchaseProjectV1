<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="activity"
            type="run.piece.dev.refactoring.ui.passcode.NewPassCodeActivity"/>

        <variable
            name="viewModel"
            type="run.piece.dev.refactoring.ui.passcode.NewPassCodeViewModel" />

        <variable
            name="dataStoreViewModel"
            type="run.piece.dev.refactoring.datastore.DataNexusViewModel" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/top_layout"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/back_iv"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="12dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    app:srcCompat="@drawable/ic_x24_arrow_left_black"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/content_layout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@+id/top_layout"
            app:layout_constraintBottom_toBottomOf="parent"
            >
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/top_title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="35dp"
                android:text="@string/passcode_title"
                android:textSize="26dp"
                android:textColor="@color/c_4a4d55"
                android:lineHeight="34dp"
                app:fontFamily="@font/pretendard_extrabold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/sub_title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/passcode_title_c"
                android:textSize="12dp"
                android:textColor="@color/c_757983"
                android:lineHeight="16dp"
                app:fontFamily="@font/pretendard_regular"
                app:layout_constraintStart_toStartOf="@+id/top_title_tv"
                app:layout_constraintEnd_toEndOf="@+id/top_title_tv"
                app:layout_constraintTop_toBottomOf="@+id/top_title_tv" />



            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/mark_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="64dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/sub_title_tv">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/mark_root_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    >

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/mark_1_iv"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        app:srcCompat="@drawable/circle_selector"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/mark_2_iv"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_marginStart="10dp"
                        app:srcCompat="@drawable/circle_selector"
                        app:layout_constraintStart_toEndOf="@+id/mark_1_iv"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/mark_3_iv"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_marginStart="10dp"
                        app:srcCompat="@drawable/circle_selector"
                        app:layout_constraintStart_toEndOf="@+id/mark_2_iv"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/mark_4_iv"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_marginStart="10dp"
                        android:background="@drawable/circle_selector"
                        app:layout_constraintStart_toEndOf="@+id/mark_3_iv"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/mark_5_iv"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_marginStart="10dp"
                        android:background="@drawable/circle_selector"
                        app:layout_constraintStart_toEndOf="@+id/mark_4_iv"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/mark_6_iv"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_marginStart="10dp"
                        android:background="@drawable/circle_selector"
                        app:layout_constraintStart_toEndOf="@+id/mark_5_iv"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        />
                </androidx.constraintlayout.widget.ConstraintLayout>


            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/bio_layout"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                app:layout_constraintStart_toStartOf="@id/mark_layout"
                app:layout_constraintEnd_toEndOf="@+id/mark_layout"
                app:layout_constraintBottom_toTopOf="@id/passcode_layout"
                android:layout_marginBottom="16dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:background="@drawable/bio_pressed"
                android:visibility="visible"
                >

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/bio_chk_iv"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    app:srcCompat="@drawable/ic_x16_check"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:visibility="visible"
                    />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/bio_title_tv"
                    android:text="@string/face_title"
                    app:layout_constraintStart_toEndOf="@+id/bio_chk_iv"
                    app:layout_constraintEnd_toStartOf="@+id/bio_retry_iv"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="4dp"
                    app:layout_constraintTop_toTopOf="@+id/bio_chk_iv"
                    app:layout_constraintBottom_toBottomOf="@+id/bio_chk_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/c_b8bcc8"
                    android:textSize="14dp"
                    android:lineHeight="20dp"
                    android:fontFamily="@font/pretendard_bold"
                    />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/bio_retry_iv"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    app:srcCompat="@drawable/ic_x16_arrow_right_10cfc94"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:visibility="gone"
                    />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- 키패드 부모 레이아웃 -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/passcode_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                android:background="@color/c_283a4a"
                >
                <!-- 1번째 열 키패드 -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/row_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    >
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="72dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent">

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/code_1"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:text="@={viewModel.code1}"
                            android:textSize="26dp"
                            android:textColor="@color/text_alpha_20_white"
                            android:background="@null"
                            app:fontFamily="@font/pretendard_regular"
                            android:gravity="center"
                            android:lineHeight="34dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toStartOf="@+id/code_2" />

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/code_2"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:text="@={viewModel.code2}"
                            android:textSize="26dp"
                            android:textColor="@color/text_alpha_20_white"
                            android:background="@null"
                            android:gravity="center"
                            android:lineHeight="34dp"
                            app:fontFamily="@font/pretendard_regular"
                            app:layout_constraintStart_toEndOf="@+id/code_1"
                            app:layout_constraintEnd_toStartOf="@+id/code_3" />

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/code_3"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:text="@={viewModel.code3}"
                            android:textSize="26dp"
                            android:textColor="@color/text_alpha_20_white"
                            android:background="@null"
                            android:gravity="center"
                            android:lineHeight="34dp"
                            app:fontFamily="@font/pretendard_regular"
                            app:layout_constraintStart_toEndOf="@+id/code_2"
                            app:layout_constraintEnd_toEndOf="parent" />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>

                <!-- 2번째 열 키패드 -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/row_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/row_1"
                    >
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="72dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        >

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/code_4"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:text="@={viewModel.code4}"
                            android:textSize="26dp"
                            android:textColor="@color/text_alpha_20_white"
                            android:background="@null"
                            android:gravity="center"
                            android:lineHeight="34dp"
                            app:fontFamily="@font/pretendard_regular"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toStartOf="@+id/code_5" />

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/code_5"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:text="@={viewModel.code5}"
                            android:textSize="26dp"
                            android:textColor="@color/text_alpha_20_white"
                            android:background="@null"
                            android:gravity="center"
                            android:lineHeight="34dp"
                            app:fontFamily="@font/pretendard_regular"
                            app:layout_constraintStart_toEndOf="@+id/code_4"
                            app:layout_constraintEnd_toStartOf="@+id/code_6" />

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/code_6"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:text="@={viewModel.code6}"
                            android:textSize="26dp"
                            android:textColor="@color/text_alpha_20_white"
                            android:background="@null"
                            android:gravity="center"
                            android:lineHeight="34dp"
                            app:fontFamily="@font/pretendard_regular"
                            app:layout_constraintStart_toEndOf="@+id/code_5"
                            app:layout_constraintEnd_toEndOf="parent" />

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>

                <!-- 3번째 열 키패드 -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/row_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/row_2"
                    >
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="72dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent">

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/code_7"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:text="@={viewModel.code7}"
                            android:textSize="26dp"
                            android:textColor="@color/text_alpha_20_white"
                            android:background="@null"
                            android:gravity="center"
                            android:lineHeight="34dp"
                            app:fontFamily="@font/pretendard_regular"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toStartOf="@+id/code_8" />

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/code_8"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:text="@={viewModel.code8}"
                            android:textSize="26dp"
                            android:textColor="@color/text_alpha_20_white"
                            android:background="@null"
                            android:gravity="center"
                            android:lineHeight="34dp"
                            app:fontFamily="@font/pretendard_regular"
                            app:layout_constraintStart_toEndOf="@+id/code_7"
                            app:layout_constraintEnd_toStartOf="@+id/code_9" />

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/code_9"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:text="@={viewModel.code9}"
                            android:textSize="26dp"
                            android:textColor="@color/text_alpha_20_white"
                            android:background="@null"
                            android:gravity="center"
                            android:lineHeight="34dp"
                            app:fontFamily="@font/pretendard_regular"
                            app:layout_constraintStart_toEndOf="@+id/code_8"
                            app:layout_constraintEnd_toEndOf="parent" />

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>


                <!-- 4번째 열 키패드 -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/row_4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/row_3"
                    >
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="72dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        >

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/all_clear"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:text="@string/passcode_clear"
                            android:textSize="14dp"
                            android:textColor="@color/text_alpha_20_white"
                            android:background="@null"
                            android:gravity="center"
                            android:lineHeight="20dp"
                            app:fontFamily="@font/pretendard_regular"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toStartOf="@+id/code_0" />

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/code_0"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:text="@={viewModel.code0}"
                            android:textSize="26dp"
                            android:textColor="@color/text_alpha_20_white"
                            android:background="@null"
                            android:gravity="center"
                            android:lineHeight="34dp"
                            app:fontFamily="@font/pretendard_regular"
                            app:layout_constraintStart_toEndOf="@+id/all_clear"
                            app:layout_constraintEnd_toStartOf="@id/clear" />

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/clear"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@null"
                            app:layout_constraintStart_toEndOf="@+id/code_0"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:textColor="@color/text_alpha_20_white" />

                        <androidx.appcompat.widget.AppCompatImageView
                            app:layout_constraintStart_toStartOf="@id/clear"
                            app:layout_constraintEnd_toEndOf="@+id/clear"
                            app:layout_constraintTop_toTopOf="@+id/clear"
                            app:layout_constraintBottom_toBottomOf="@+id/clear"
                            app:srcCompat="@drawable/keypad_clear_icon_l"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>


            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/loading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:paddingTop="8dp"
                app:lottie_fileName="piece_loading.json"
                app:lottie_loop="true"
                app:lottie_autoPlay="true"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>