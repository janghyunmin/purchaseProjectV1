<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="portfolioViewModel"
            type="run.piece.dev.refactoring.ui.portfolio.PortfolioNewViewModel" />

        <variable
            name="pos"
            type="Integer" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="68dp"
        android:layout_height="168dp"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/percent_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/rate_iv"
            android:layout_marginBottom="4dp"
            >

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/arrow_iv"
                android:layout_width="12dp"
                android:layout_height="12dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_x12_arrow_up" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/percent_tv"
                android:layout_width="wrap_content"
                android:layout_height="16dp"
                android:fontFamily="@font/pretendard_bold"
                android:gravity="center"
                android:text=""
                android:textColor="@color/c_F95D5D"
                android:textSize="12dp"
                app:layout_constraintStart_toEndOf="@+id/arrow_iv"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/rate_iv"
            android:layout_width="40dp"
            android:layout_height="0dp"
            android:layout_marginTop="4dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/default_iv"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:visibility="gone"
            app:srcCompat="@drawable/layout_round_f95d5d" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/default_iv"
            android:layout_width="40dp"
            android:layout_height="80dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/line"
            />


        <View
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="8dp"
            android:background="@color/c_eaecf0"
            app:layout_constraintBottom_toTopOf="@+id/portfolio_number_tv"/>
        
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/portfolio_number_tv"
            android:layout_width="60dp"
            android:layout_height="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text=""
            android:textSize="14dp"
            android:textColor="@color/c_4a4d55"
            android:fontFamily="@font/pretendard_regular"
            android:gravity="center"
            android:lineHeight="20dp"
            />




    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>