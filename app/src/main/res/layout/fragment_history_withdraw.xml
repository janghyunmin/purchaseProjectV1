<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="fragment"
            type="run.piece.dev.refactoring.ui.deposit.fragment.HistoryWithDrawFragment" />

        <variable
            name="viewModel"
            type="run.piece.dev.refactoring.ui.deposit.DepositViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/history_rv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:overScrollMode="never"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <androidx.constraintlayout.widget.Group
            android:id="@+id/history_empty_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:constraint_referenced_ids="no_item_iv,no_item_title_tv"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/no_item_iv"
            android:layout_width="120dp"
            android:layout_height="120dp"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@drawable/bookmark_empty_img"
            android:layout_marginTop="120dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/no_item_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/no_item_iv"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:text="거래내역이 없어요."
            android:textSize="16dp"
            android:lineHeight="20dp"
            android:fontFamily="@font/pretendard_regular"
            android:textColor="@color/c_8c919f"
            />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/create_account_tv"
            app:layout_constraintTop_toBottomOf="@+id/no_item_title_tv"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="32dp"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:visibility="gone"
            android:text="가상계좌 만들기"
            android:textSize="16dp"
            android:lineHeight="25dp"
            android:gravity="center"
            android:fontFamily="@font/pretendard_bold"
            android:textColor="@color/c_4a4d55"
            android:background="@drawable/purchase_history_selector"
            android:paddingLeft="32dp"
            android:paddingRight="32dp"
            />

        <com.google.android.material.progressindicator.CircularProgressIndicator
            android:id="@+id/loading_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminate="true"
            app:indicatorDirectionCircular="clockwise"
            app:indicatorColor="@color/c_10cfc9"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>