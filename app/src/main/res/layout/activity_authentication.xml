<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="activity"
            type="run.piece.dev.view.authentication.AuthenticationActivity" />

        <variable
            name="authViewModel"
            type="run.piece.dev.view.authentication.AuthInputViewModel" />

        <!-- 키패드 ViewModel -->
        <variable
            name="passcode"
            type="run.piece.dev.view.passcode.PassCodeViewModel"/>

    </data>

    <ScrollView
        android:id="@+id/sv_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/parent_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/top_layout"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <!--                <ImageView-->
                <!--                    android:id="@+id/close_icon"-->
                <!--                    android:layout_width="24dp"-->
                <!--                    android:layout_height="24dp"-->
                <!--                    android:layout_marginEnd="16dp"-->
                <!--                    android:background="@drawable/close_icon"-->
                <!--                    app:layout_constraintBottom_toBottomOf="parent"-->
                <!--                    app:layout_constraintEnd_toEndOf="parent"-->
                <!--                    app:layout_constraintTop_toTopOf="parent" />-->

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/back_img"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:layout_marginStart="4dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    >
                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:background="@drawable/ic_x24_arrow_left_black"
                        />
                </androidx.constraintlayout.widget.ConstraintLayout>


            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/content_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/top_layout">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/top_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:text="@string/auth_title"
                    android:textColor="@color/black"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    style="@style/display_2"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/sub_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:text="@string/auth_sub_title"
                    android:textColor="@color/g700_757983"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/top_title"
                    style="@style/body_1"/>

                <androidx.cardview.widget.CardView
                    android:id="@+id/notice_cv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="19dp"
                    app:cardElevation="0dp"
                    app:cardCornerRadius="8dp"
                    app:cardBackgroundColor="@drawable/authentication_pressed"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/sub_title">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/notice_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="44dp"
                        android:gravity="center"
                        android:fontFamily="@font/pretendard_regular"
                        android:lineHeight="20dp"
                        android:textSize="14dp"
                        android:text="@string/auth_notice"
                        android:textColor="@color/g600_8C919F" />

                </androidx.cardview.widget.CardView>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/pretendard_bold"
                android:lineHeight="20dp"
                android:textSize="14dp"
                android:layout_marginTop="32dp"
                android:layout_marginStart="16dp"
                android:text="@string/auth_bank_number"
                android:textColor="@color/g800_4A4D55"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/content_layout"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/member_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="100dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/number">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/number_layout"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginStart="14dp"
                    android:layout_marginEnd="14dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/first"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:cursorVisible="true"
                        android:gravity="start|center"
                        android:padding="3dp"
                        android:hint="생년월일 6자리"
                        android:lineHeight="23dp"
                        android:maxLength="6"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:text="@={authViewModel.userFirst}"
                        android:textColor="@color/g800_4A4D55"
                        android:textColorHint="@color/g600_8C919F"
                        android:textSize="16dp"
                        android:theme="@style/Piece_EditText"
                        app:fontFamily="@font/pretendard_regular"
                        app:layout_constraintEnd_toStartOf="@+id/line2"
                        app:layout_constraintHorizontal_bias="0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <View
                        android:id="@+id/line2"
                        android:layout_width="11dp"
                        android:layout_height="1dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:background="@color/g800_4A4D55"
                        app:layout_constraintBottom_toBottomOf="@+id/first"
                        app:layout_constraintStart_toEndOf="@+id/first"
                        app:layout_constraintEnd_toStartOf="@+id/last"
                        app:layout_constraintTop_toTopOf="@+id/first" />

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/last"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:gravity="start|center"
                        android:inputType="numberPassword"
                        android:padding="3dp"
                        android:lineHeight="23dp"
                        android:textSize="16dp"
                        android:hint="뒤 7자리"
                        android:maxLength="7"
                        android:maxLines="1"
                        android:ems="7"
                        android:text="@={authViewModel.userLast}"
                        android:textColor="@color/g800_4A4D55"
                        android:textColorHint="@color/g600_8C919F"
                        android:theme="@style/Piece_EditText"
                        app:layout_constraintHorizontal_bias="1"
                        app:fontFamily="@font/pretendard_regular"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/line2"
                        app:layout_constraintEnd_toEndOf="parent" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/clear_icon"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginEnd="3dp"
                        android:background="@drawable/ic_x24_x_circle"
                        android:visibility="gone"
                        app:layout_constraintTop_toTopOf="@+id/last"
                        app:layout_constraintBottom_toBottomOf="@+id/last"
                        app:layout_constraintEnd_toEndOf="@+id/last"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/loading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:paddingTop="8dp"
                app:lottie_fileName="piece_loading.json"
                app:lottie_loop="true"
                app:lottie_autoPlay="true"
                />


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/bottom_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                >
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/guard_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toTopOf="@+id/passcode_layout"
                    android:background="@color/c_182a32"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:visibility="visible"
                    >

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/guard_icon"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:background="@drawable/ic_x24_siren"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/guard_text"
                            app:layout_constraintStart_toEndOf="@+id/guard_icon"
                            android:layout_marginStart="2dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="키패드 보안이 작동 중이에요"
                            android:textSize="14dp"
                            android:lineHeight="20dp"
                            android:textColor="@color/white"
                            android:fontFamily="@font/pretendard_regular"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            />

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>

                <!-- 키패드 부모 레이아웃 -->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/passcode_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:background="@color/c_ffffff"
                    android:visibility="visible"
                    android:animateLayoutChanges="true">

                    <!-- 1번째 열 키패드 -->
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/row_1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="72dp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            >

                            <androidx.appcompat.widget.AppCompatButton
                                android:id="@+id/code_1"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:lineHeight="34dp"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toStartOf="@+id/code_2"
                                android:text="@={passcode.getCode1}"
                                android:textColor="@color/text_alpha_20_white"
                                android:background="@null"
                                android:textSize="26dp"
                                app:fontFamily="@font/pretendard_regular" />

                            <androidx.appcompat.widget.AppCompatButton
                                android:id="@+id/code_2"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:lineHeight="34dp"
                                android:text="@={passcode.getCode2}"
                                app:layout_constraintStart_toEndOf="@+id/code_1"
                                app:layout_constraintEnd_toStartOf="@+id/code_3"
                                android:textColor="@color/text_alpha_20_white"
                                android:background="@null"
                                android:textSize="26dp"
                                app:fontFamily="@font/pretendard_regular" />

                            <androidx.appcompat.widget.AppCompatButton
                                android:id="@+id/code_3"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:lineHeight="34dp"
                                android:text="@={passcode.getCode3}"
                                app:layout_constraintStart_toEndOf="@+id/code_2"
                                app:layout_constraintEnd_toEndOf="parent"
                                android:textColor="@color/text_alpha_20_white"
                                android:background="@null"
                                android:textSize="26dp"
                                app:fontFamily="@font/pretendard_regular" />
                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <!-- 2번째 열 키패드 -->
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/row_2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@+id/row_1"
                        >
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="72dp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            >

                            <androidx.appcompat.widget.AppCompatButton
                                android:id="@+id/code_4"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:lineHeight="34dp"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toStartOf="@+id/code_5"
                                android:text="@={passcode.getCode4}"
                                android:textColor="@color/text_alpha_20_white"
                                android:background="@null"
                                android:textSize="26dp"
                                app:fontFamily="@font/pretendard_regular" />

                            <androidx.appcompat.widget.AppCompatButton
                                android:id="@+id/code_5"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:lineHeight="34dp"
                                android:text="@={passcode.getCode5}"
                                app:layout_constraintStart_toEndOf="@+id/code_4"
                                app:layout_constraintEnd_toStartOf="@+id/code_6"
                                android:textColor="@color/text_alpha_20_white"
                                android:background="@null"
                                android:textSize="26dp"
                                app:fontFamily="@font/pretendard_regular" />

                            <androidx.appcompat.widget.AppCompatButton
                                android:id="@+id/code_6"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:lineHeight="34dp"
                                android:text="@={passcode.getCode6}"
                                app:layout_constraintStart_toEndOf="@+id/code_5"
                                app:layout_constraintEnd_toEndOf="parent"
                                android:textColor="@color/text_alpha_20_white"
                                android:background="@null"
                                android:textSize="26dp"
                                app:fontFamily="@font/pretendard_regular" />
                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <!-- 3번째 열 키패드 -->
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/row_3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@+id/row_2"
                        >
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="72dp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            >

                            <androidx.appcompat.widget.AppCompatButton
                                android:id="@+id/code_7"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:lineHeight="34dp"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toStartOf="@+id/code_8"
                                android:text="@={passcode.getCode7}"
                                android:textColor="@color/text_alpha_20_white"
                                android:background="@null"
                                android:textSize="26dp"
                                app:fontFamily="@font/pretendard_regular" />

                            <androidx.appcompat.widget.AppCompatButton
                                android:id="@+id/code_8"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:lineHeight="34dp"
                                android:text="@={passcode.getCode8}"
                                app:layout_constraintStart_toEndOf="@+id/code_7"
                                app:layout_constraintEnd_toStartOf="@+id/code_9"
                                android:textColor="@color/text_alpha_20_white"
                                android:background="@null"
                                android:textSize="26dp"
                                app:fontFamily="@font/pretendard_regular" />

                            <androidx.appcompat.widget.AppCompatButton
                                android:id="@+id/code_9"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:lineHeight="34dp"
                                android:text="@={passcode.getCode9}"
                                app:layout_constraintStart_toEndOf="@+id/code_8"
                                app:layout_constraintEnd_toEndOf="parent"
                                android:textColor="@color/text_alpha_20_white"
                                android:background="@null"
                                android:textSize="26dp"
                                app:fontFamily="@font/pretendard_regular" />
                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </androidx.constraintlayout.widget.ConstraintLayout>


                    <!-- 4번째 열 키패드 -->
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/row_4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@+id/row_3"
                        >
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="72dp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            >

                            <androidx.appcompat.widget.AppCompatButton
                                android:id="@+id/clear_text"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toStartOf="@+id/code_0"
                                android:text="@string/passcode_clear"
                                android:gravity="center"
                                android:lineHeight="20dp"
                                android:textColor="@color/text_alpha_20_white"
                                android:background="@null"
                                android:textSize="14dp"
                                app:fontFamily="@font/pretendard_regular"
                                />


                            <androidx.appcompat.widget.AppCompatButton
                                android:id="@+id/code_0"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:lineHeight="34dp"
                                android:text="@={passcode.getCode0}"
                                app:layout_constraintStart_toEndOf="@+id/clear_text"
                                app:layout_constraintEnd_toStartOf="@id/clear"
                                android:textColor="@color/text_alpha_20_white"
                                android:background="@null"
                                android:textSize="26dp"
                                app:fontFamily="@font/pretendard_regular" />

                            <androidx.appcompat.widget.AppCompatButton
                                android:id="@+id/clear"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="@null"
                                app:layout_constraintStart_toEndOf="@+id/code_0"
                                app:layout_constraintEnd_toEndOf="parent"
                                android:textColor="@color/text_alpha_20_white" />
                            <androidx.appcompat.widget.AppCompatImageView
                                android:id="@+id/clear_img"
                                app:layout_constraintStart_toStartOf="@id/clear"
                                app:layout_constraintEnd_toEndOf="@+id/clear"
                                app:layout_constraintTop_toTopOf="@+id/clear"
                                app:layout_constraintBottom_toBottomOf="@+id/clear"
                                app:srcCompat="@drawable/keypad_clear_icon_f"
                                android:layout_width="48dp"
                                android:layout_height="48dp"/>

                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>


            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/footer_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:visibility="gone">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/authBtn"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/layout_round_10cfc9"
                    android:gravity="center"
                    android:text="인증하기"
                    android:textColor="@color/white"
                    android:textSize="16dp"
                    android:lineHeight="25dp"
                    app:fontFamily="@font/pretendard_extrabold"
                    app:layout_constraintBottom_toBottomOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</layout>