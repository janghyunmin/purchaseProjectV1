<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/object_info_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/object_info_item_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="72dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/product_iv"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/test_cow_female_blue" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/product_title_tv"
                style="@style/title_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="일련번호 002"
                android:textColor="@color/g900_292A2E"
                app:layout_constrainedWidth="true"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintBottom_toTopOf="@+id/product_info_tv"
                app:layout_constraintStart_toEndOf="@+id/product_iv"
                app:layout_constraintEnd_toStartOf="@+id/arrow_iv"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/product_info_tv"
                style="@style/body_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="한우 • 암소 • 36개월"
                android:textColor="@color/g700_757983"
                app:layout_constrainedWidth="true"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/product_iv"
                app:layout_constraintEnd_toStartOf="@+id/arrow_iv"
                app:layout_constraintTop_toBottomOf="@+id/product_title_tv" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/arrow_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_x16_arrow_down" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/content_card_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:cardBackgroundColor="@color/g100_F9F9F9"
            app:cardElevation="0dp"
            app:cardCornerRadius="8dp"
            app:layout_constraintTop_toBottomOf="@+id/object_info_item_layout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/one_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/g700_757983"
                    android:layout_marginStart="16dp"
                    android:text="구제역 접종"
                    app:layout_constrainedWidth="true"
                    app:layout_constraintHorizontal_bias="0"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    style="@style/body_2"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/one_content_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/g900_292A2E"

                    android:layout_marginEnd="16dp"
                    android:text="12차 (2023.08.31)"
                    app:layout_constrainedWidth="true"
                    app:layout_constraintHorizontal_bias="1"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/one_tv"
                    app:layout_constraintEnd_toEndOf="parent"
                    style="@style/body_2"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/two_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/g700_757983"
                    android:layout_marginTop="8dp"
                    android:layout_marginStart="16dp"
                    android:text="브루셀라 접종"
                    app:layout_constrainedWidth="true"
                    app:layout_constraintHorizontal_bias="0"
                    app:layout_constraintTop_toBottomOf="@+id/one_tv"
                    app:layout_constraintStart_toStartOf="parent"
                    style="@style/body_2"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/two_content_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/g900_292A2E"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="16dp"
                    android:text="완료(2020.04.22)"
                    app:layout_constrainedWidth="true"
                    app:layout_constraintHorizontal_bias="1"
                    app:layout_constraintTop_toBottomOf="@+id/one_content_tv"
                    app:layout_constraintStart_toEndOf="@+id/two_tv"
                    app:layout_constraintEnd_toEndOf="parent"
                    style="@style/body_2"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>