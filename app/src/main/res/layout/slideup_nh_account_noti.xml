<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="nhPop"
            type="run.piece.dev.view.fragment.dialog.ProfitBottomSheetDialog" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/j_dialog_back_round"
        app:behavior_hideable="true"
        android:animateLayoutChanges="true"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/top_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="28dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                >
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/top_title_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="28dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:text="@string/nh_bt_sheet_title_txt"
                    android:textColor="@color/c_4a4d55"
                    android:textSize="20dp"
                    android:lineHeight="28dp"
                    android:gravity="center"
                    android:fontFamily="@font/pretendard_extrabold"/>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/close_icon_layout"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    app:layout_constraintTop_toTopOf="@+id/top_title_tv"
                    app:layout_constraintBottom_toBottomOf="@+id/top_title_tv"
                    app:layout_constraintEnd_toEndOf="parent">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:srcCompat="@drawable/ic_x16_x" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/content_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/top_layout"
                android:layout_marginTop="28dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                >

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/view_item_iv"
                    android:layout_width="160dp"
                    android:layout_height="160dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:srcCompat="@drawable/img_slide_1" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/title_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/view_item_iv"
                    android:text="@string/nh_bt_sheet_page_1_title_txt"
                    android:textColor="@color/c_4a4d55"
                    android:textSize="16dp"
                    android:textFontWeight="600"
                    android:gravity="center"
                    android:lineHeight="25dp"
                    android:fontFamily="@font/pretendard_semibold" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/sub_title_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/title_tv"
                    android:layout_marginTop="4dp"
                    android:text="@string/nh_bt_sheet_page_1_content_txt"
                    android:textSize="14dp"
                    android:textFontWeight="400"
                    android:gravity="center"
                    android:lineHeight="20dp"
                    android:fontFamily="@font/pretendard_regular" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/nh_btn_tv"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                app:layout_constraintTop_toBottomOf="@+id/content_layout"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginTop="28dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:text="@string/nh_bt_sheet_btn_txt"
                android:textColor="@color/white"
                android:textSize="16dp"
                android:fontFamily="@font/pretendard_bold"
                android:gravity="center"
                android:lineHeight="25dp"
                android:background="@drawable/layout_round_10cfc9"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>