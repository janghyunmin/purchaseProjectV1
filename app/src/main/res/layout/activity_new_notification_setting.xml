<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".refactoring.ui.notification.NewNotificationSettingActivity">

    <data>
        <variable
            name="activity"
            type="run.piece.dev.refactoring.ui.notification.NewNotificationSettingActivity" />
        <variable
            name="viewModel"
            type="run.piece.dev.refactoring.ui.notification.NewNotificationSettingViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/top_back_iv"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/back_layout"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="4dp"
            app:layout_constraintTop_toTopOf="@+id/top_back_iv"
            app:layout_constraintStart_toStartOf="@+id/top_back_iv"
            app:layout_constraintBottom_toBottomOf="@+id/top_back_iv">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@drawable/ic_x24_arrow_left_black"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/top_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/more_title_6"
            android:textColor="@color/g800_4A4D55"
            android:textSize="16dp"
            android:lineHeight="25dp"
            app:fontFamily="@font/pretendard_regular"
            app:layout_constraintTop_toTopOf="@+id/top_back_iv"
            app:layout_constraintBottom_toBottomOf="@+id/top_back_iv"
            app:layout_constraintStart_toStartOf="@+id/top_back_iv"
            app:layout_constraintEnd_toEndOf="@+id/top_back_iv"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/info_notification_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/top_back_iv">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/info_notification_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/pretendard_regular"
                android:text="@string/notice_setting_2_title_1"
                android:textColor="@color/g800_4A4D55"
                android:layout_marginStart="16dp"
                android:layout_marginTop="20dp"
                android:lineHeight="25dp"
                android:textSize="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/info_notification_subTitle"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/info_notification_subTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/pretendard_regular"
                android:text="@string/notice_setting_re_title_1"
                android:textColor="@color/g500_B8BCC8"
                android:lineHeight="16dp"
                android:textSize="12dp"
                android:layout_marginStart="16dp"
                android:layout_marginBottom="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/info_notification_title" />

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/info_notification_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:gravity="center"
                android:textOff=""
                android:textOn=""
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:switchMinWidth="24dp" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:id="@+id/line1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:background="@color/g200_F2F3F4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/info_notification_layout"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/ad_notification_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/line1">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/ad_notification_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/pretendard_regular"
                android:text="@string/notice_setting_2_title_2"
                android:textColor="@color/g800_4A4D55"
                android:layout_marginStart="16dp"
                android:layout_marginTop="20dp"
                android:lineHeight="25dp"
                android:textSize="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/ad_notification_subTitle"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/ad_notification_subTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/pretendard_regular"
                android:text="@string/notice_setting_re_title_2"
                android:textColor="@color/g500_B8BCC8"
                android:lineHeight="16dp"
                android:textSize="12dp"
                android:layout_marginStart="16dp"
                android:layout_marginBottom="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ad_notification_title" />

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/ad_notification_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:gravity="center"
                android:textOff=""
                android:textOn=""
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:switchMinWidth="24dp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/noti_message_tv"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="16dp"
            android:text="@string/notification_setting_noti_txt"
            android:background="@color/g100_F9F9F9"
            android:textSize="14dp"
            android:lineHeight="20dp"
            android:fontFamily="@font/pretendard_regular"
            android:textColor="@color/g500_B8BCC8"
            app:layout_constraintTop_toBottomOf="@+id/ad_notification_layout"
            app:layout_constraintVertical_bias="0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>