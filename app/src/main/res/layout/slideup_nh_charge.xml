<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="nhPop"
            type="run.piece.dev.view.fragment.dialog.ProfitBottomSheetDialog" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"
        android:background="@drawable/j_dialog_back_round"
        app:behavior_hideable="true"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/rect_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_rect" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/top_title_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="16dp"
                android:fontFamily="@font/pretendard_semibold"
                android:gravity="center"
                android:lineHeight="26dp"
                android:text="@string/nh_charge_bt_dlg_title_txt"
                android:textColor="@color/c_292a2e"
                android:textFontWeight="600"
                android:textSize="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/rect_iv" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/account_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/top_title_tv">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/my_account_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/my_account_iv"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/basic_title_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:fontFamily="@font/pretendard_regular"
                        android:lineHeight="22dp"
                        android:text="@string/nh_charge_bt_dlg_basic_txt"
                        android:textColor="@color/c_757983"
                        android:textSize="14dp"
                        app:layout_constraintStart_toEndOf="@+id/my_account_iv"
                        app:layout_constraintTop_toTopOf="@+id/my_account_iv" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/my_account_name_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:layout_marginTop="3dp"
                        android:fontFamily="@font/pretendard_semibold"
                        android:lineHeight="20dp"
                        android:text=""
                        android:textColor="@color/c_292a2e"
                        android:textSize="16dp"
                        app:layout_constraintStart_toEndOf="@+id/my_account_iv"
                        app:layout_constraintTop_toBottomOf="@+id/basic_title_tv" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/my_account_num_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:fontFamily="@font/pretendard_regular"
                        android:lineHeight="26dp"
                        android:text=""
                        android:textColor="@color/c_292a2e"
                        android:textSize="16dp"
                        app:layout_constraintBottom_toBottomOf="@+id/my_account_name_tv"
                        app:layout_constraintStart_toEndOf="@+id/my_account_name_tv"
                        app:layout_constraintTop_toTopOf="@+id/my_account_name_tv" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/rect_vertical_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="19dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/my_account_layout"
                    app:srcCompat="@drawable/ic_rect_vertical" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/my_vran_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/rect_vertical_iv">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/my_vran_iv"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/bank11" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/name_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:fontFamily="@font/pretendard_regular"
                        android:lineHeight="22dp"
                        android:text=""
                        android:textColor="@color/c_757983"
                        android:textSize="14dp"
                        app:layout_constraintStart_toEndOf="@+id/my_vran_iv"
                        app:layout_constraintTop_toTopOf="@+id/my_vran_iv" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/my_vran_name_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:layout_marginTop="3dp"
                        android:fontFamily="@font/pretendard_semibold"
                        android:lineHeight="20dp"
                        android:text="NH농협은행"
                        android:textColor="@color/c_292a2e"
                        android:textSize="16dp"
                        app:layout_constraintStart_toEndOf="@+id/my_vran_iv"
                        app:layout_constraintTop_toBottomOf="@+id/name_tv" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/my_vran_num_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:fontFamily="@font/pretendard_regular"
                        android:lineHeight="26dp"
                        android:text=""
                        android:textColor="@color/c_292a2e"
                        android:textSize="16dp"
                        app:layout_constraintBottom_toBottomOf="@+id/my_vran_name_tv"
                        app:layout_constraintStart_toEndOf="@+id/my_vran_name_tv"
                        app:layout_constraintTop_toTopOf="@+id/my_vran_name_tv" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/copy_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        app:layout_constraintTop_toTopOf="@+id/name_tv"
                        app:layout_constraintBottom_toBottomOf="@+id/my_vran_num_tv"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"
                        android:paddingStart="16dp"
                        android:paddingRight="16dp"
                        android:background="@drawable/layout_round_eaecf0"
                        android:text="복사"
                        android:textSize="14dp"
                        android:textColor="@color/c_757983"
                        android:lineHeight="20dp"
                        android:fontFamily="@font/pretendard_bold"
                        android:textFontWeight="700"
                        android:visibility="gone"
                        />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/fold_copy_tv"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/layout_round_eaecf0"
                        android:text="계좌번호 복사"
                        android:textSize="14dp"
                        android:textColor="@color/c_757983"
                        android:gravity="center"
                        android:lineHeight="20dp"
                        android:fontFamily="@font/pretendard_bold"
                        android:textFontWeight="700"
                        app:layout_constraintTop_toBottomOf="@+id/my_vran_iv"
                        android:visibility="gone"
                        />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>


            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/notice_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/account_layout"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="24dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:paddingBottom="16dp"
                android:background="@drawable/layout_round_16dp_f9f9f9"
                >

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/notice_title_1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="16dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:text="@string/nh_charge_bt_dlg_text_1"
                    android:textSize="14dp"
                    android:textColor="@color/c_4a4d55"
                    android:lineHeight="22dp"
                    android:fontFamily="@font/pretendard_regular"
                    />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/notice_title_2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/notice_title_1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="8dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:text="@string/nh_charge_bt_dlg_text_2"
                    android:textSize="14dp"
                    android:textColor="@color/c_4a4d55"
                    android:lineHeight="22dp"
                    android:fontFamily="@font/pretendard_regular"
                    />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/notice_title_3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/notice_title_2"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="8dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:text="@string/nh_charge_bt_dlg_text_3"
                    android:textSize="14dp"
                    android:textColor="@color/c_4a4d55"
                    android:lineHeight="22dp"
                    android:fontFamily="@font/pretendard_regular"
                    />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/notice_title_4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/notice_title_3"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="8dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:text="@string/nh_charge_bt_dlg_text_4"
                    android:textSize="14dp"
                    android:textColor="@color/c_4a4d55"
                    android:lineHeight="22dp"
                    android:fontFamily="@font/pretendard_regular"
                    />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/notice_title_5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/notice_title_4"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="8dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:text="@string/nh_charge_bt_dlg_text_5"
                    android:textSize="14dp"
                    android:textColor="@color/c_4a4d55"
                    android:lineHeight="22dp"
                    android:fontFamily="@font/pretendard_regular"
                    />



            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/nh_btn_tv"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="24dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/layout_round_10cfc9"
                android:fontFamily="@font/pretendard_bold"
                android:gravity="center"
                android:lineHeight="25dp"
                android:text="@string/nh_charge_bt_dlg_btn_txt"
                android:textColor="@color/c_ffffff"
                android:textSize="16dp"
                app:layout_constraintTop_toBottomOf="@+id/notice_layout"
                app:layout_constraintBottom_toBottomOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
